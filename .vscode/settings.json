{
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.formatOnSave": true,
    "editor.trimAutoWhitespace": true,
    "clangd.arguments": [
        "--compile-commands-dir=./build",
        "--background-index",
        "--header-insertion=iwyu",
        "--all-scopes-completion",
        "--completion-style=detailed",
        "--cross-file-rename",
        "--enable-config",
        "--pretty",
        "--clang-tidy",
        "--pch-storage=memory",
    ],
    "cSpell.words": [
        "cmake",
        "codecov",
        "discretized",
        "GCOVR"
    ]
}
